{
  "device": "cuda:0",
  "MAX_EPOCHES": 2,
  "model_logs_dir": "/mnt/tusimple_model_logs/",
  "exp_name": "exp0",
  "num_workers": 8 ,

  "dataset": {
    "dataset_name": "Tusimple",
    "batch_size": 12,
    "resize_shape": [512, 288]
  },

  "optim": {
    "lr": 15e-2,
