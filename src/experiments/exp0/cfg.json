    "weight_decay": 1e-4,
    "nesterov": true
  },

  "lr_scheduler": {
    "warmup": 20,
    "max_iter": 1500,
    "min_lrs": 1e-10
  },

  "model": {
    "scale_exist": 0.07
  }
}